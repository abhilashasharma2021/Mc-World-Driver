<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.YourEmailActivity">




    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/backarrow"
        android:padding="2dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_next"
        android:orientation="vertical"
        android:layout_below="@id/back"
        android:padding="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/os_semibold"
            android:text="What's your mobile number ? "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/os_regular"
            android:text="Get ride reciept along with promotions in your box"
            android:textSize="14sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/os_regular"
            android:text="Mobile Number"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/flag"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/flag"/>

            <TextView
                android:id="@+id/codeNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/flag"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/os_regular"
                android:text="+91"/>






            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                android:layout_toRightOf="@id/codeNumber"
                android:hint="Mobile Number"
                android:textColor="@color/black"
                android:fontFamily="@font/os_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />


        </RelativeLayout>


    </LinearLayout>




    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="18sp" />




</RelativeLayout>